<project default="toolsverse-ui-jar">
    <target name="toolsverse-ui-jar">
        <jar destfile="${dist-jar-dir}/toolsverse-ui-common.jar" basedir="${destination-dir}" includes="com/toolsverse/ui/common/**,
			           com/toolsverse/ui/images/**,
			           com/toolsverse/ui/resource/**" manifest="manifest.mf" />
        <if>
            <equals arg1="${create-source-jars}" arg2="true" />
            <then>
                <mkdir dir="${dist-source-jar-dir}" />
                <jar destfile="${dist-source-jar-dir}/toolsverse-ui-common-source.jar" basedir="${source-dir}" includes="com/toolsverse/ui/common/**,
					           com/toolsverse/ui/images/**,
					           com/toolsverse/ui/resource/**" />
            </then>
        </if>

        <if>
            <equals arg1="${create-javadoc}" arg2="true" />
            <then>
                <mkdir dir="${dist-javadoc-jar-dir}" />
                <jar destfile="${dist-javadoc-jar-dir}/toolsverse-ui-common-javadoc.jar" basedir="${javadoc-dir}" includes="com/toolsverse/ui/common/**,
					           com/toolsverse/ui/images/**,
					           com/toolsverse/ui/resource/**" />
            </then>
        </if>

        <if>
            <equals arg1="${create-javadoc}" arg2="true" />
            <then>
                <mkdir dir="${dist-javadoc-jar-dir}" />
                <jar destfile="${dist-javadoc-jar-dir}/toolsverse-wings-javadoc.jar" basedir="${javadoc-dir}" includes="org/wings/**" />
            </then>
        </if>
    	
    </target>
</project>