<project default="toolsverse-storage-jar">
    <target name="toolsverse-storage-jar">
        <jar destfile="${dist-jar-dir}/toolsverse-storage.jar" basedir="${destination-dir}" includes="com/toolsverse/storage/**" excludes="com/toolsverse/storage/impl/wings/**" manifest="manifest.mf" />

        <jar destfile="${dist-jar-dir}/toolsverse-storage-wings.jar" basedir="${destination-dir}" includes="com/toolsverse/storage/impl/wings/**" manifest="manifest.mf" />

        <if>
            <equals arg1="${create-source-jars}" arg2="true" />
            <then>
                <mkdir dir="${dist-source-jar-dir}" />
                <jar destfile="${dist-source-jar-dir}/toolsverse-storage-source.jar" basedir="${source-dir}" includes="com/toolsverse/storage/**" excludes="com/toolsverse/storage/impl/wings/**" />

                <jar destfile="${dist-source-jar-dir}/toolsverse-storage-wings-source.jar" basedir="${source-dir}" includes="com/toolsverse/storage/impl/wings/**" />
            </then>
        </if>

        <if>
            <equals arg1="${create-javadoc}" arg2="true" />
            <then>
                <mkdir dir="${dist-javadoc-jar-dir}" />
                <jar destfile="${dist-javadoc-jar-dir}/toolsverse-storage-javadoc.jar" basedir="${javadoc-dir}" includes="com/toolsverse/storage/**" excludes="com/toolsverse/storage/impl/wings/**" />

                <jar destfile="${dist-javadoc-jar-dir}/toolsverse-storage-wings-javadoc.jar" basedir="${javadoc-dir}" includes="com/toolsverse/storage/impl/wings/**" />
            </then>
        </if>

    </target>
</project>